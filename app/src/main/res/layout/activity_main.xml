<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amber"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Allison!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#e0dff0"
        android:text="Click to change text color"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
         />

    <TextView
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:layout_centerHorizontal="true"
        android:background="#e0dff0"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="Click to change background color"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/changeTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeBackgroundButton"
        android:layout_centerHorizontal="true"
        android:background="#e0dff0"
        android:layout_margin="20dp"
        android:text="Click to change text"
        android:padding="10dp"
        android:textSize="30sp"/>

    <EditText
        android:layout_above="@id/changeTextButton"
        android:id="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Create your own text!" />

    <TextView
        android:id="@+id/changeCustomTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/changeTextButton"
        android:layout_centerHorizontal="true"
        android:background="#e0dff0"
        android:layout_margin="60dp"
        android:padding="10dp"
        android:text="Click to change to custom text"
        android:textSize="20sp"/>
</RelativeLayout>